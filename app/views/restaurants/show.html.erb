<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= '⭐️' * review.rating %><br>
      <%= review.content %>
    </li>
  <% end %>
</ul>


<p><%= link_to 'Add review', new_restaurant_review_path(@restaurant) %></p>


<%= link_to 'Back', restaurants_path %>

